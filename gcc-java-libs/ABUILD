# ABUILD generated by mkpkg_generator.sh

pkgname=gcc-java-libs
pkgver=4.5.2
pkgbuild=1
arch=('auto')
provides=gcc-java

shortdesc=('gcc-java libraries')
longdesc=('Package contains libs from gcc-java libraries and should be built against current gcc package.')

tags=('libs dev-libs')

build() {
	go_src_dir

	# We will use some very dirty tricks to collect file set. IT SHOULD BE REMOVED FROM 4.5.x BUILD!!!!

	LIBS_TO_COPY=`echo "SELECT file_name FROM files WHERE packages_package_id IN (SELECT package_id FROM packages WHERE package_name='gcc-java' AND package_installed=1) AND file_name LIKE '%/lib%.so%';" | sqlite3 /var/mpkg/packages.db`
	for i in $LIBS_TO_COPY ; do
		echo Copy: $i
		mkdir -p ${pkgdir}/`dirname $i`
		cp -d /$i ${pkgdir}/$i
	done

}


