pkgname=fonttosfnt
pkgver=1.0.4
pkgbuild=10
arch=('auto')

shortdesc=('fonttosfnt')
longdesc=('fonttosfnt is part of X11. For more information about the X.Org Foundation (the providers of the X.Org implementation of the X Window System), see their website: http://www.x.org')

tags=('x11-apps xserver')

source=('http://xorg.freedesktop.org/archive/individual/app/fonttosfnt-1.0.4.tar.bz2')

build_deps='aaa_elflibs glibc-solibs libfontenc x11-skel'

before_build() {
 echo ""
}

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --sysconfdir=/etc --localstatedir=/var --infodir=/usr/info --mandir=/usr/man --disable-static --with-fontrootdir=/usr/share/fonts --build=$ARCH-slackware-linux "
INSTALL_KEYS="DESTDIR=$pkgdir"
after_build() {
 echo ""
}

