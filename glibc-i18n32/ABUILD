pkgname=glibc-i18n32
pkgver=0.2
pkgbuild=1
arch=('auto')

shortdesc="Symlinks to provide locale files for x86 programs on x86_64"

tags="compat32 x86 sys-libs"

adddep="glibc-i18n"

build() {
	set -e
	mkdir -p $pkgdir/usr/lib/
	DIRLIST="locale gconv"
	for i in $DIRLIST ; do
		ln -sf ../lib64/$i $pkgdir/usr/lib/$i
	done
}

