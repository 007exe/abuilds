# ABUILD generated by mkpkg_generator.sh

pkgname=php-mongo
pkgver=1.4.5
pkgbuild=1
arch=("auto")

shortdesc=("PHP driver for MongoDB")

tags=("dev-lang server")

source=("http://pecl.php.net/get/mongo-$pkgver.tgz")

build_deps="php"
config_files="etc/php/conf.d/mongo.ini"
build() {
	go_src_dir
	burn_patches
	phpize
	./configure --prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --enable-mongo
	make INSTALL_ROOT=${pkgdir} install -j${numjobs}
	install -Dm0644 ${filedir}/mongo.ini ${pkgdir}/etc/php/conf.d/mongo.ini

}
