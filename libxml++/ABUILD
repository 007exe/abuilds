pkgname=libxml++
pkgver=2.36.0
pkgbuild=1
arch=('auto')

shortdesc="libxml++ is a C++ wrapper for the libxml XML parser library."

source=("ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.34/$pkgname-$pkgver.tar.bz2")

tags="libs dev-libs"

# Automatically-generated build_deps. Subject to revision.
build_deps="gcc-libs gcc glib2 glibc-solibs glibmm libffi libsigc++ libxml2 zlib"



BUILD_SYSTEM="autotools"


BUILD_KEYS="--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--disable-static \
	--mandir=/usr/man"

INSTALL_KEYS="DESTDIR=$pkgdir"

