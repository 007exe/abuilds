###Fast menus
gtk-menu-drop-shadow = 1
gtk-menu-shadow-delay = 1

###some other gtk settings 
gtk-enable-mnemonics = 1
gtk-enable-tooltips = 1
gtk-toolbar-style = GTK_TOOLBAR_ICONS
gtk-tooltip-timeout = 5
