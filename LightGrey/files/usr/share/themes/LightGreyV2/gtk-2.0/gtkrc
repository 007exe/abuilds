###enable/disable icons on buttons
gtk-button-images = 1

###enable menuicons
gtk-menu-images = 1

###default Font
gtk-font-name = "Droid Sans 10"

###icon size
#gtk-icon-sizes = "panel-menu=16,16:panel=16,16:gtk-dialog=48,48:gtk-small-toolbar=16,16:gtk-large-toolbar=16,16:gtk-menu=16,16:gtk-button=16,16"
