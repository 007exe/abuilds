pkgname=mousepad
pkgver=0.2.17
tree=`echo $pkgver | cut -d . -f 1-2`
pkgbuild=3
arch=('auto')

shortdesc="simple Xfce oriented text editor"

source=("git:git://git.xfce.org/apps/mousepad")

tags="xfce xfce-base"
build_deps="xfce4-dev-tools m4 gtksourceview exo"

BUILD_SYSTEM="autotools"
BUILD_WORD="LDFLAGS=\"$SLKLDFLAGS\" CFLAGS=\"$SLKCFLAGS\" CXXFLAGS=\"$SLKCFLAGS\" ./autogen.sh"
BUILD_KEYS="--prefix=/usr \
	--sysconfdir=/etc/xfce \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--libexecdir=/usr/lib$LIBDIRSUFFIX/xfce4 \
	--disable-static \
	--mandir=/usr/man \
	--program-prefix= \
	--program-suffix= \
	--disable-debug"

INSTALL_KEYS="DESTDIR=$pkgdir"

