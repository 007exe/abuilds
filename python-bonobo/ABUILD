patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="develop dev-python"

# Automatically-generated build_deps. Subject to revision.
build_deps="atk avahi bzip2 cairo gcc-libs dbus dbus-glib expat fontconfig freetype gcc GConf gdk-pixbuf glib2 glibc-solibs gnome-vfs gtk+2 libart_lgpl libbonobo libbonoboui libcanberra libgnome libgnomecanvas libICE libogg libpng libpthread-stubs libSM libtool libvorbis libX11 libXau libxcb libXcomposite libXcursor libXdamage libXdmcp libXext libXfixes libXi libXinerama libxml2 libXrandr libXrender openssl-solibs ORBit2 pango pixman popt python util-linux-ng xcb-util zlib"

#dependencies only needed to build package

provides=""
