pkgbuild=1
arch="auto"

# Package description
shortdesc=("Gnome NetworkManager applet")
longdesc=("Gnome NetworkManager applet")

# Source URL
source=("http://ftp.gnome.org/pub/GNOME/sources/network-manager-applet/0.9/network-manager-applet-${pkgver}.tar.bz2")

# Tags
tags="xapps net-misc"

# Automatically-generated build_deps. Subject to revision.
build_deps="bzip2 gcc-libs glibc-solibs expat libpng libtasn1 libgpg-error ORBit2 libgcrypt libxcb libgnome-keyring gcc libffi GConf fontconfig libXdmcp libXau libXrender cairo libnotify util-linux-ng gnome-bluetooth libX11 gnutls gtk+2 gdk-pixbuf dbus-glib pango glib2 pixman atk dbus freetype zlib udev NetworkManager NetworkManager ppp polkit-gnome gnome-icon-theme libnotify"

adddep="NetworkManager>=0.9.0 ppp>=2.4.5 polkit-gnome gnome-icon-theme libnotify"

# Build system
BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr \
--bindir=/usr/bin \
--sbindir=/usr/sbin \
--libexecdir=/usr/lib${LIBDIRSUFFIX}/networkmanager \
--includedir=/usr/include \
--mandir=/usr/man \
--infodir=/usr/info \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--sysconfdir=/etc \
--with-gtkver=2 \
--disable-static \
--disable-maintainer-mode \
--localstatedir=/var"
INSTALL_KEYS="GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir}"

after_build() {
	install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
	gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" --domain nm-applet ${pkgdir}/etc/gconf/schemas/*.schemas
	rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
