# ABUILD generated by mkpkg_generator.sh

pkgname=bzip2
pkgver=1.0.6
pkgbuild=2
arch=('auto')
SOLIB=1.0.6

shortdesc=('bzip2 (a block-sorting file compressor)')

longdesc=("Bzip2 compresses files using the Burrows-Wheeler block "
"sorting text compression algorithm, and Huffman coding. Compression "
"is generally considerably better than that achieved by more conventional "
"LZ77/LZ78- based compressors, and approaches the performance of the "
"PPM family of statistical compressors. Julian Seward <jseward@acm.org> "
"is the author of bzip2.")

tags="base app-arch"

source=(http://www.bzip.org/${pkgver}/bzip2-${pkgver}.tar.gz)

build_deps='aaa_elflibs glibc-solibs'

docs="bzip2.txt *.html README.XML.STUFF"

build() {
  go_src_dir
  burn_patches
  # add large-file support
  sed -e 's/^CFLAGS=\(.*\)$/CFLAGS=\1 \$(BIGFILES)/' -i ./Makefile-libbz2_so

  # use our optimization
  sed -i "s|-O2|${CFLAGS}|g" Makefile
  sed -i "s|-O2|${CFLAGS}|g" Makefile-libbz2_so

  make -f Makefile-libbz2_so
  make bzip2 bzip2recover libbz2.a
  make
  echo "End build"
}

after_build() {
  go_src_dir
  install -dm755 ${pkgdir}/usr/{bin,lib${LIBDIRSUFFIX},include,man/man1}

  install -m755 bzip2-shared ${pkgdir}/usr/bin/bzip2
  install -m755 bzip2recover bzdiff bzgrep bzmore ${pkgdir}/usr/bin
  ln -sf bzip2 ${pkgdir}/usr/bin/bunzip2
  ln -sf bzip2 ${pkgdir}/usr/bin/bzcat

  install -m755 libbz2.so.${SOLIB} ${pkgdir}/usr/lib${LIBDIRSUFFIX}
  ln -s libbz2.so.${SOLIB} ${pkgdir}/usr/lib${LIBDIRSUFFIX}/libbz2.so
  ln -s libbz2.so.${SOLIB} ${pkgdir}/usr/lib${LIBDIRSUFFIX}/libbz2.so.1
  ln -s libbz2.so.${SOLIB} ${pkgdir}/usr/lib${LIBDIRSUFFIX}/libbz2.so.1.0
  install -m644 libbz2.a ${pkgdir}/usr/lib${LIBDIRSUFFIX}/libbz2.a

  install -m644 bzlib.h ${pkgdir}/usr/include/

  for file in bzip2.1 bzdiff.1 bzgrep.1 bzmore.1 ; do
      cat ${file} | gzip -9c > ${pkgdir}/usr/man/man1/${file}.gz
  done
  echo "End after_build"
}