pkgname=xmore
pkgver=1.0.2
pkgbuild=1
arch=('auto')

shortdesc=('xmore')
longdesc=('xmore is part of X11. For more information about the X.Org Foundation (the providers of the X.Org implementation of the X Window System), see their website: http://www.x.org')

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/xmore-${pkgver}.tar.bz2")

build_deps='glibc-solibs util-linux-ng libxcb libICE libSM libX11 libXau libXaw libXdmcp libXext libXmu libXpm libXt x11-skel'

before_build() {
 echo ""
}

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --sysconfdir=/etc --localstatedir=/var --infodir=/usr/info --mandir=/usr/man --disable-static --with-fontrootdir=/usr/share/fonts --build=$ARCH-slackware-linux "
INSTALL_KEYS="DESTDIR=$pkgdir"
after_build() {
 echo ""
}

