	sed -i 's/^install_so.0:.*/& install_base/' librtmp/Makefile
	make -j${NUMJOBS} prefix=/usr MANDIR="${pkgdir}/usr/man" LIBDIR="${pkgdir}/usr/lib${LIBDIRSUFFIX}" DESTDIR="${pkgdir}" install

}

