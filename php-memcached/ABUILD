pkgname=php-memcached
pkgver=2.1.0
pkgbuild=1
arch=("auto")

shortdesc=("PHP wrapper for libmemcached")
longdesc=("")

tags=("dev-libs server")

source=("http://pecl.php.net/get/memcached-$pkgver.tgz")

build_deps="php>=5.4 libmemcached"
config_files="etc/php/memcached.ini"

before_build() {
	go_src_dir
	phpize
}

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/man --sysconfdir=/etc"
INSTALL_KEYS="INSTALL_ROOT=$pkgdir"

after_build() {
	echo 'extension=memcached.so' >memcached.ini
	install -Dm644 memcached.ini "$pkgdir/etc/php/memcached.ini"
}

