build_deps="make gcc grep binutils intltool"

build(){
go_src_dir
./configure --prefix=/usr \
--sbindir=/usr/sbin \
--mandir=/usr/man \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--sysconfdir=/etc \
--localstatedir=/var \
--disable-gtk-doc-html \
--disable-static \
--libexecdir=/usr/lib${LIBDIRSUFFIX}/polkit-1
make || echo "11111111"
make DESTDIR=${pkgdir} install || echo "11111111"
}

after_build() {
  install -m644 "${filedir}/polkit.pam" "${pkgdir}/etc/pam.d/polkit-1" || return 1
  echo "End after_build"
}

