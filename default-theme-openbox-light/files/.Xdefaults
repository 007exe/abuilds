##########################
## URxvt general config ##
##########################
#
URxvt*foreground: #f2f2f2
URxvt*background: #303030
URxvt*font: xft:Droid Sans Mono-10
URxvt*scrollstyle:plain
URxvt*scrollBar_right:true
URxvt*scrollColor: #b3b3a1
#
###########################
## Stjerm general config ##
###########################
#
stjerm*key: f12
stjerm*opacity: 100
stjerm*foreground: #d9d9d9
stjerm*font: Dejavu Sans Mono 10
stjerm*background: #333333
stjerm*height: 200
# uncomment this option for placing stjerm on full/custom width of screen (see your current screen resolution)
#stjerm*width: 1024
stjerm*allowbold: true
stjerm*autohide: false
stjerm*tabfill: false
#
##########################
## XTerm general config ##
##########################
#
XTerm*foreground: #f2f2f2
XTerm*background: #303030
XTerm*font: -*-fixed-medium-r-*-*-18-*-*-*-*-*-iso10646-1
XTerm*boldFont: -*-fixed-medium-r-*-*-18-*-*-*-*-*-iso10646-1
XTerm*loginShell: true
XTerm*charClass: 33:48,35:48,37-38:48,43-47:48,58:48,61:48,63-64:48,126:48
XTerm*altSendsEscape:  true
XTerm*keepSelection:   true
XTerm*bellIsUrgent: true
XTerm*dynamicColors: on
XTerm*saveLines: 32000
XTerm*rightScrollBar: True
XTerm*scrollBar: True
#
###########################
## XTerm keyboard config ##
###########################
#
XTerm*VT100.Translations: #override \
Prior: scroll-back(1,page) \n\
Next: scroll-forw(1,page) \n\
Prior: scroll-back(1,pages) \n\
Next: scroll-forw(1,pages)\n\
Meta W: quit() \n\
Meta V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
Meta K: send-signal(int) clear-saved-lines() \n\
Meta P: print() \n\
Meta minus: smaller-vt-font() \n\
Meta KP_Subtract: smaller-vt-font() \n\
Meta plus: larger-vt-font() \n\
Meta KP_Add: larger-vt-font() \n\
Meta C: select-cursor-start() \
select-cursor-end(PRIMARY, CUT_BUFFER0) \n\
Meta M: iconify() \n\
